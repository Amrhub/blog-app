<article class="card" >
  <%= link_to user_post_path(@user.id, post.id), class: "text-decoration-none" do %>
    <div class="card-header">
      <h3>
        <%= post.title %>
      </h3>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= post.text[0..100] + "..." %>
      </p>
    </div>
    <div class="card-footer text-end">
    Comments: <%= post.comments_counter %>,
    Likes: <%= post.likes_counter %>
  </div>
  <% end %>
</article>
